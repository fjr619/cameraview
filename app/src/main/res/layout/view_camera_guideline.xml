<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_above="@+id/cameraUi"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:visibility="gone">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageUserCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:adjustViewBounds="true"
        android:padding="@dimen/margin_large"
        android:visibility="gone"
        app:srcCompat="@drawable/image_overlay_card_v" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imageUserFace"
        app:srcCompat="@drawable/image_overlay_face_v"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:adjustViewBounds="true"
        android:layout_above="@id/centerView"
        android:visibility="visible" />

    <View
        android:id="@+id/centerView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true"
/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_below="@+id/centerView"
        android:id="@+id/imageUserCard2"
        app:srcCompat="@drawable/image_overlay_card_v_small"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_medium"
        android:adjustViewBounds="true"
        android:visibility="visible" />
</RelativeLayout>